<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#232625">
    android:gravity="center"
    tools:context="com.gaparmar.mediaflashback.UI.VibeActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232625"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.gaparmar.mediaflashback.UI.VibeActivity">

        <TextView
            android:id="@+id/flashback_mode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Vibe Mode"
            android:textColor="#7adf9e"
            android:textSize="75dp"
            android:fontFamily="cursive"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="57dp"/>

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="-------------------------------------------------------------------------"
            android:textColor="#FCF7F8"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="166dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Playing"
                    android:textColor="#7adf9e"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/dancing_script_regular" />

                <TextView
                    android:id="@+id/song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="None"
                    android:textColor="#ffffff"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/artist_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="none"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/album_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="none"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/last_played_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Last Played"
                    android:textAlignment="center"
                    android:textColor="#7adf9e"
                    android:textSize="35dp"
                    android:fontFamily="@font/dancing_script_regular"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/location_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Location:"
                            android:textAlignment="textEnd"
                            android:textColor="#467750"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="217dp" />

                        <TextView
                            android:id="@+id/date_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Date:"
                            android:textAlignment="textEnd"
                            android:textColor="#467750"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="242dp" />

                        <TextView
                            android:id="@+id/time_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Time:"
                            android:textAlignment="textEnd"
                            android:textColor="#467750"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="271dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.33">

                        <TextView
                            android:id="@+id/song_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="None"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            tools:layout_editor_absoluteX="121dp"
                            tools:layout_editor_absoluteY="243dp" />

                        <TextView
                            android:id="@+id/song_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="None"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            tools:layout_editor_absoluteX="121dp"
                            tools:layout_editor_absoluteY="217dp" />

                        <TextView
                            android:id="@+id/song_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="None"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            tools:layout_editor_absoluteX="121dp"
                            tools:layout_editor_absoluteY="272dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="-------------------------------------------------------------------------"
            android:textColor="#FCF7F8"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/regular_mode_title"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Songs: "
            android:textSize="40dp"
            android:fontFamily="cursive"
            android:textColor="#7adf9e"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:id="@+id/upcoming_songs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="upcoming song 1"
                android:layout_marginLeft="40dp"
                android:textColor="#c4d7f2"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="upcoming song 2"
                android:layout_marginLeft="40dp"
                android:textColor="#c4d7f2"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="upcoming song 3"
                android:layout_marginLeft="40dp"
                android:textColor="#c4d7f2"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="upcoming song 4"
                android:layout_marginLeft="40dp"
                android:textColor="#c4d7f2"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/regular_button"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:background="#7adf9e"
                android:onClick="onRegularModeClick"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"
                android:textColor="#232625"/>

            <ImageButton
                android:id="@+id/previous_button"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginRight="50dp"
                android:background="#467750"
                android:onClick="onPreviousButtonClick"
                app:layout_constraintBottom_toBottomOf="@+id/pause_button"
                app:layout_constraintEnd_toStartOf="@+id/play_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/next_button"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp">

                <ImageButton
                    android:id="@+id/pause_button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#467750"
                    android:onClick="onPauseButtonClick"
                    app:layout_constraintBottom_toBottomOf="@+id/play_button"
                    app:layout_constraintEnd_toEndOf="@+id/play_button"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/play_button"
                    app:layout_constraintTop_toTopOf="@+id/play_button"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@android:drawable/ic_media_pause" />

                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="#467750"
                    android:onClick="onPlayButtonClick"
                    app:srcCompat="@android:drawable/ic_media_play" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:background="#467750"
                android:onClick="onNextButtonClick"
                app:layout_constraintBottom_toBottomOf="@+id/toggleBtn"
                app:layout_constraintEnd_toStartOf="@+id/toggleBtn"
                app:layout_constraintStart_toEndOf="@+id/play_button"
                app:layout_constraintTop_toTopOf="@+id/toggleBtn"
                app:srcCompat="@android:drawable/ic_media_next" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>